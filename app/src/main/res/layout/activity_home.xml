<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/krem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,"
        android:textColor="@color/green"
        android:textSize="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/montserratbold"
        />

    <TextView
        android:id="@+id/judul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:text="What Do You Want To Cook?"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:fontFamily="@font/montserratregular"/>



    <EditText
        android:id="@+id/edit_query"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_below="@id/judul2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/search_view_background"
        android:hint="Search Food"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:onClick="search"/>


    <Button
        android:id="@+id/button_cari"
        android:layout_below="@+id/judul2"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/ic_search"/>

    <TextView
        android:id="@+id/popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Recipes"
        android:layout_below="@id/edit_query"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratbold"/>

    <LinearLayout
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popular">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="10dp"
            android:onClick="cheese"
            android:backgroundTint="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cheesecake"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheesecake"
            android:textColor="@color/black"
            android:layout_marginLeft="150dp"
                android:fontFamily="@font/montserratbold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a kind of rich dessert cake made with cream and soft cheese on a graham cracker, cookie, or pastry crust, typically topped with a fruit sauce."
                android:textColor="@color/black"
                android:layout_marginLeft="150dp"
                android:textSize="12sp"
                android:layout_marginTop="55dp"/>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

<!--Card2-->
    <LinearLayout
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:onClick="beef"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/beefsteak"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beef Steak"
                android:textColor="@color/black"
                android:layout_marginLeft="150dp"
                android:fontFamily="@font/montserratbold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a thick slice of lean beef, typically from the rump and eaten grilled, broiled, or fried."
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="150dp"
                android:textSize="12sp"
                android:layout_marginTop="55dp"/>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!--Card3-->
    <LinearLayout
        android:id="@+id/card3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card2">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:onClick="smooth"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smoothie"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smooties"
                android:textColor="@color/black"
                android:layout_marginLeft="150dp"
                android:fontFamily="@font/montserratbold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a thick, smooth drink of fresh fruit pureed with milk, yogurt, or ice cream."
                android:textColor="@color/black"
                android:layout_marginLeft="150dp"
                android:textSize="12sp"
                android:layout_marginTop="55dp"/>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

        <!--Card4-->
        <LinearLayout
            android:id="@+id/card4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card3">

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                android:onClick="Roasted"
                android:backgroundTint="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/roasted"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roasted Chicken"
                    android:textColor="@color/black"
                    android:layout_marginLeft="150dp"
                    android:fontFamily="@font/montserratbold"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chicken prepared as food by roasting whether in a home kitchen, over a fire, or with a rotisserie (rotary spit)."
                    android:textColor="@color/black"
                    android:layout_marginLeft="150dp"
                    android:textSize="12sp"
                    android:layout_marginTop="55dp"/>



            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </RelativeLayout>
</ScrollView>