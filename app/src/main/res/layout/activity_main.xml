<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creame"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/intro_img"/>

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_centerHorizontal="true"
        android:text="FoodieApp"
        android:fontFamily="@font/montserratbold"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="@color/green"/>

    <TextView
        android:id="@+id/deskripsiJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif"
        android:text="Make Your Own Food!"/>

    <Button
        android:id="@+id/explorebutton"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/deskripsiJudul"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="19dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        android:text="Explore Now!"

        android:fontFamily="@font/montserratbold"/>




</RelativeLayout>
